<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="7dp"
        tools:context=".ui.view.OrderDetailFragment">

        <TextView
            android:id="@+id/nameModify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:background="@drawable/edittext_unmodifiable"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/emailModify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/edittext_unmodifiable"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/passwordModify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/edittext"
            android:ems="10"
            android:hint="@string/password_star"
            android:inputType="textPassword"
            android:paddingLeft="15dp"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/passwordCheckModify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/edittext"
            android:ems="10"
            android:hint="@string/password_star"
            android:inputType="textPassword"
            android:paddingLeft="15dp"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/passwordModifyValid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:paddingLeft="5dp"
            android:text="@string/modify_password_info"
            android:textColor="#F44336"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/phoneModify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/edittext"
            android:ems="10"
            android:inputType="phone"
            android:paddingLeft="15dp"
            android:textSize="14dp" />


        <TextView
            android:id="@+id/withdrawalButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="@string/withdrwal_button"
            android:textAlignment="viewEnd"
            android:textSize="14dp"
            tools:ignore="RtlCompat" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/modifyButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/confirm_button"
                android:text="@string/modify_confirm"
                android:textColor="@color/white"
                android:textSize="14dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>


</layout>